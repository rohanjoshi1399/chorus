# AWS Bedrock Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# LLM Configuration
BEDROCK_MODEL=anthropic.claude-3-5-sonnet-20241022-v2:0
BEDROCK_EMBEDDING_MODEL=amazon.titan-embed-text-v2:0
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=4096

# Vector Database (Qdrant)
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
QDRANT_COLLECTION=documents

# Graph Database (Neo4j) - Phase 4
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password_here

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_KEY=your_api_key_here

# WebSocket Configuration
WS_MAX_CONNECTIONS=1000
WS_PING_INTERVAL=30
WS_MESSAGE_QUEUE_SIZE=100

# Memory Configuration
MEMORY_BUFFER_SIZE=10
MEMORY_COMPRESSION_THRESHOLD=20

# Retrieval Configuration
RETRIEVAL_TOP_K=50
RETRIEVAL_RERANK_TOP_K=5
RETRIEVAL_MIN_SIMILARITY=0.7

# GraphRAG Configuration (Phase 4)
GRAPHRAG_ENABLED=false
GRAPH_MAX_HOP_DEPTH=3

# Web Search Configuration (Phase 4)
WEB_SEARCH_ENABLED=false
SERPAPI_API_KEY=
TAVILY_API_KEY=

# LangSmith (Optional - for tracing)
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=your_langsmith_key_here
LANGCHAIN_PROJECT=multi-agent-rag

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Environment
ENVIRONMENT=development  # development, staging, production
